@model IEnumerable<NotificationPortal.ViewModels.ValidationVM.ClientVM>

@{
    ViewBag.Title = "Clients";
}

<h1 class="display-4 text-center pb-3">@ViewBag.Title</h1>

<ol class="breadcrumb bg-faded">
    <li class="breadcrumb-item"><a href="~/Home/Dashboard" class="link-color">Home</a></li>
    <li class="breadcrumb-item active">Clients</li>
</ol>

<div class="row">
    <div class="col-md-2">
        <p>
            @Html.ActionLink("Create New", "Add", null, new { @class = "btn btn-primary btn-lg" })
        </p>
    </div>

    <div class="offset-md-4 col-md-6">
        <div style="float: right">
            <form class="form-inline pb-3" method="get" action="~/Client/Search">
                <input class="form-control mr-sm-2" type="text" placeholder="Search" name="name" />
                <input class="btn btn-secondary" type="submit" value="Search" />
            </form>
        </div>
    </div>
</div>

<table class="table table-bordered">
    <tr class="bg-inverse text-white text-center">
        <th class="text-center">
            @Html.DisplayNameFor(model => model.ClientName)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.StatusName)
        </th>
        <th></th>
        <th></th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr class="text-center">
        <td>
            @Html.DisplayFor(modelItem => item.ClientName)
        </td>
        <td>
            @{
                if (item.StatusName == "Disabled")
                {
                    <span class="badge badge-danger">@Html.DisplayFor(modelItem => item.StatusName)</span>
                }
                else
                {
                    <span class="badge badge-success">@Html.DisplayFor(modelItem => item.StatusName)</span>
                }
            }
            
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.ClientID } , new { @class = "btn btn-success btn-sm" })
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id = item.ClientID }, new { @class = "btn btn-secondary text-muted btn-sm" })
        </td>
        <td>
            @Html.ActionLink("Delete", "Delete", new { id = item.ClientID }, new { @class = "btn btn-danger btn-sm" })
        </td>
    </tr>
}
</table>