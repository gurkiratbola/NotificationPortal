
@model IEnumerable<NotificationPortal.Models.Server>

@{
    ViewBag.Title = "Server List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="display-4 text-center pb-3">@ViewBag.Title</h1>

<ol class="breadcrumb bg-faded">
    <li class="breadcrumb-item"><a href="~/Home/Dashboard" class="link-color">Home</a></li>
    <li class="breadcrumb-item active">Servers</li>
</ol>

<div class="row">
    <div class="col-md-2">
        <p>
            @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary btn-lg" })
        </p>
    </div>
    <div class="offset-md-4 col-md-6">
        <div style="float: right">
            <form class="form-inline pb-3" method="get" action="~/Server/Search">
                <input class="form-control mr-sm-2" type="text" placeholder="Search" name="name" />
                <input class="btn btn-secondary" type="submit" value="Search" />
            </form>
        </div>
    </div>
</div>
<table  class="table table-bordered">
    <tr class="bg-inverse text-white text-center">
        <th class="text-center" >
            @Html.DisplayNameFor(model => model.DataCenterLocation.Location)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status.StatusName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ServerName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DataCenterLocation.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status.StatusName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ServerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ServerID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ServerID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ServerID })
            </td>
        </tr>
    }

</table>
