@using Microsoft.AspNet.Identity

@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="navbar-nav">
            <li class="nav-item hover-dropdown">
                <a href="@Url.Action("Index", "Manage")" class="nav-link drop-btn">
                    <span class="hidden-lg-down" id="username">
                        Hello, 
                        @if (ViewData["FullName"] != null) {
                            @Html.Raw(ViewData["FullName"])
                        }
                        else {
                            @Html.Raw("user");
                        }
                    </span>
                    <span class="hidden-lg-up">
                        My Profile
                    </span>
                </a>
                <div class="hover-dropdown-content">
                    <a href="@Url.Action("Index", "Profile")">Edit Profile</a>
                    <a href="@Url.Action("ChangePassword", "Manage")">Change Password</a>
                </div>
            </li>

            <li class="nav-item log-off"><a href="javascript:document.getElementById('logoutForm').submit()" class="nav-link">Log Off</a></li>
        </ul>
    }
}
else
{
    <ul class="navbar-nav">
        <li class="nav-item">@Html.ActionLink("Log In", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "nav-link" })</li>
    </ul>
}