@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="navbar-nav">
            <li class="nav-item">
                @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage", @class = "nav-link" })
            </li>
            @{if (Request.IsAuthenticated && !HttpContext.Current.User.IsInRole("User"))
                  {
                    <li class="dropdown nav-item">
                        <a class="btn btn-default" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                            <i class="fa fa-cog" aria-hidden="true"></i>
                            @*<span class="caret"></span>*@
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                            @if (HttpContext.Current.User.IsInRole("Client"))
                            {
                                <li>@Html.ActionLink("User Management", "Index", "User", null, new { @class = "nav-link" })</li>
                            }
                            else
                            {
                                <li>@Html.ActionLink("User Management", "Index", "User", null, new { @class = "nav-link" })</li>
                                <li>@Html.ActionLink("Servers", "Index", "Server", null, new { @class = "nav-link" })</li>
                                <li>@Html.ActionLink("Clients", "Index", "Client", null, new { @class = "nav-link" })</li>
                                <li>@Html.ActionLink("Applications", "Index", "Application", null, new { @class = "nav-link" })</li>
                            }
                        </ul>
                    </li>
                }
            }
            <li class="nav-item"><a href="javascript:document.getElementById('logoutForm').submit()" class="nav-link">Log off</a></li>
        </ul>
    }
}
else
{
    <ul class="navbar-nav">
        <li class="nav-item">@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "nav-link" })</li>
        <li class="nav-item">@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "nav-link" })</li>
    </ul>
}