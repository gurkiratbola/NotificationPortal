@model NotificationPortal.ViewModels.StatusVM

@{
    ViewBag.Title = "Delete Status";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center display-4 pb-3">@ViewBag.Title</h1>

<ol class="breadcrumb bg-faded">
    <li class="breadcrumb-item"><a href="~/Dashboard/Index" class="link-color">Home</a></li>
    <li class="breadcrumb-item"><a href="~/Status/Index" class="link-color">Status</a></li>
    <li class="breadcrumb-item active">@Html.DisplayFor(model => model.StatusName)</li>
</ol>

<h3 class="text-danger pb-2">Are you sure you want to delete this status?</h3>

@if (TempData["SuccessMsg"] != null)
{
            <!-- display success message -->
    <p class="alert alert-success alert-dismissible fade show" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        @Html.Raw(TempData["SuccessMsg"])
    </p>
}
@if (TempData["ErrorMsg"] != null)
{
            <!-- display error message -->
    <p class="alert alert-danger alert-dismissible fade show" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        @Html.Raw(TempData["ErrorMsg"])
    </p>
}
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StatusName)
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StatusName)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StatusTypeName)
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StatusTypeName)
        </dd>

    </dl>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.StatusID)
        @Html.HiddenFor(model => model.StatusName)
        @Html.HiddenFor(model => model.StatusTypeID)
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-mint text-white" />
            @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-danger" })
        </div>
    }
</div>
